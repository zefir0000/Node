<html>

<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,700" />
    <link rel="stylesheet" href="/css/main.css" />
</head>

<body>
    <div class="home dog-app">
        <header class="app-header">
            <nav class="app-nav">
                <ul class="app-nav__list">
                    <li class="app-nav__list-item"><a class="app-nav__link" href="/productBase">product base</a></li>
                    <li class="app-nav__list-item"><a class="app-nav__link" href="/upload"> upload file xml</a></li>
                    <li class="app-nav__list-item"><a class="app-nav__link" href="/getMarket"> markets</a></li>
                    <li class="app-nav__list-item"><a class="app-nav__link app-nav__link--is-active" href="/news"> news</a></li>
                    <li class="app-nav__list-item"><a class="app-nav__link" href="/mems"> mems</a></li>
                    <li class="app-nav__list-item"><a class="app-nav__link" href="#"> contact</a></li>
                </ul>
            </nav>
        </header>
        <div class="lightbox" v-show="formLightbox == true" style="display: inline;">
            <div class="lightbox__content"><button class="btn" @click="formLightbox = false">X</button>
                <h1 class="lightbox__header">Add News</h1>
                <form class="lightbox__form" action="/newsAdd" method="POST">
                    <div class="lightbox__form-control"><label class="lightbox__label">News title</label><input class="lightbox__input" placeholder="Title" type="text" name="title" value="" /></div>
                    <div class="lightbox__form-control"><label class="lightbox__label">Link to image</label><input class="lightbox__input" placeholder="www.image.image.jpg" type="text" name="imageLink" value="" /></div>
                    <div class="lightbox__form-control"><label class="lightbox__label">News</label><input class="lightbox__input" placeholder="News" rows="4" type="text" name="news" /></div>
                    <div class="lightbox__actions"><button class="btn btn--primary">Accept</button></div>
                </form>
            </div>
        </div>
        <div class="wrapper">
            <section class="search">
                <h1 class="search__header"></h1><button class="btn btn--primary" @click="formLightbox = true">Add news</button>
                <form class="search__form" action="/getNews" method="GET" role="search" type="search"><input class="search__input" placeholder="News title" type="text" name="name" />
                    <div class="actions_inline"><button class="btn btn--primary" @click="return q.value">search</button></div>
                </form>
            </section>
            <table class="table__style">
                <thead>
                        for news in newses
                        table.table__style
                          tr
                          tr
                          td(colspan="2")= news.title 
                              p=" like = " + news.likes + " unlikes = " + news.unlikes
                          tr
                              td(rowspan="2")= news.news
                              td 
                                img(src=news.imageLink, height='200')
                          tr
                              td 
                                  form(action='/delNews/'+ news.newsId method="POST" )
                                      .actions
                                          button.btn.btn--primary(@click="") del
                                  form(action='/editNews/'+ news.newsId method="GET" )
                                      .actions
                                          button.btn.btn--primary(@click="") edit
                </thead>
            </table>
            <footer class="app-footer"></footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/vue" type="text/javascript"></script>
    <script src="/js/app.js"></script>
</body>

</html>