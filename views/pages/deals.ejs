<html>

<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,700" />
    <link rel="stylesheet" href="/css/main.css" />
</head>

<body>
    <div class="home dog-app">
        <header class="app-header">
            <nav class="app-nav">
                <ul class="app-nav__list">
                    <li class="app-nav__list-item"><a class="app-nav__link" href="/productBase">product base</a></li>
                    <li class="app-nav__list-item"><a class="app-nav__link" href="/upload"> upload file xml</a></li>
                    <li class="app-nav__list-item"><a class="app-nav__link" href="/mems"> mems</a></li>
                    <li class="app-nav__list-item"><a class="app-nav__link app-nav__link--is-active" href="/deals"> deals</a></li>
                    <li class="app-nav__list-item"><a class="app-nav__link" href="/contact"> contact</a></li>
                </ul>
            </nav>
        </header>
        <div class="wrapper">
                
            <section class="search">
                <!-- <h1 class="search__header"></h1><button class="btn btn--primary" @click="formLightbox = true">Add deal</button> -->
                <form method="GET" action='/addDeal/'><button class="btn btn--primary"> Add Deal</button></form>
                <form class="search__form" action="/deals" method="GET" role="search" type="search"><input class="search__input"
                        placeholder="Find Deal" type="text" name="name" />
                    <div class="actions_inline"><button class="btn btn--primary" @click="return q.value">search</button></div>
                </form>
            </section>
            <table class="table__style">
                <thead>
                    <% deals.forEach(function(deal) { %>
                        <table>
                            <tr></tr>
                            <tr>
                                <td colspan="2">
                                    <%= deal.title %>
                                    <p>                                            <%= deal.user %>
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <td rowspan="2"> link: 
                                    <%= deal.link %>
                                        <hr>
                                        <p> price: 
                                            <%= deal.price %>
                                        </p>
                                        <p> currency: 
                                            <%= deal.currency %>
                                        </p>
                                        <p> upVote: 
                                            <%= deal.upVote %>
                                        </p>
                                </td>
                                <td>
                                    <img src=<%= deal.image %> style="width:150px">
                                </td>
                                <tr>
                                    <td>
                                        <p>
                                            <form method="POST" action='/deldeal/<%= deal.dealId %>'><button class="btn btn--primary">del</button></form>
                                        </p>
                                        <p>
                                            <form method="GET" action='/editdeal/<%= deal.dealId %>'><button class="btn btn--primary">edit</button></form>
                                        </p>
                                    </td>
                                </tr>
                            </tr>
                            <hr>
                        </table>
                        <% }); %>
                </thead>
            </table>
            <footer class="app-footer"></footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/vue" type="text/javascript"></script>
    <script src="/js/app.js"></script>
</body>

</html>

