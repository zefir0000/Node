<html>

<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,700" />
    <link rel="stylesheet" href="/css/main.css" />
</head>

<body>
    <div class="home dog-app">
        <header class="app-header">
            <nav class="app-nav">
                <ul class="app-nav__list">
                    <li class="app-nav__list-item"><a class="app-nav__link" href="/productBase">product base</a></li>
                    <li class="app-nav__list-item"><a class="app-nav__link" href="/upload"> upload file xml</a></li>
                    <li class="app-nav__list-item"><a class="app-nav__link app-nav__link--is-active" href="/getMarket"> markets</a></li>
                    <li class="app-nav__list-item"><a class="app-nav__link" href="/news"> news</a></li>
                    <li class="app-nav__list-item"><a class="app-nav__link" href="/mems"> mems</a></li>
                    <li class="app-nav__list-item"><a class="app-nav__link" href="/deals"> deals</a></li>
                    <li class="app-nav__list-item"><a class="app-nav__link" href="/contact"> contact</a></li>
                </ul>
            </nav>
        </header>
        <div class="wrapper">
                
            <section class="search">
                <!-- <h1 class="search__header"></h1><button class="btn btn--primary" @click="formLightbox = true">Add market</button> -->
                <form method="GET" action='/addMarket/'><button class="btn btn--primary"> Add Market</button></form>
                <form class="search__form" action="/getMarket" method="GET" role="search" type="search"><input class="search__input"
                        placeholder="Find market" type="text" name="name" />
                    <div class="actions_inline"><button class="btn btn--primary" @click="return q.value">search</button></div>
                </form>
            </section>
            <table class="table__style">
                <thead>
                    <% markets.forEach(function(market) { %>
                        <table>
                            <tr></tr>
                            <tr>
                                <td colspan="2">
                                    <%= market.name %>
                                </td>
                            </tr>
                            <tr>
                                <td rowspan="2">
                                    <%= market.description %>
                                        <hr>
                                        <p>
                                            <%= market.link %>
                                        </p>
                                        <p>
                                            <%= market.support %>
                                        </p>
                                        <p>
                                            <%= market.adress %>
                                        </p>
                                        <p>
                                            <%= market.raiting %>
                                        </p>
                                </td>
                                <td>
                                    <img src=<%= market.logo %>>
                                </td>
                                <tr>
                                    <td>
                                        <p>
                                            <form method="POST" action='/delMarket/<%= market.marketId %>'><button class="btn btn--primary">del</button></form>
                                        </p>
                                        <p>
                                            <form method="GET" action='/editMarket/<%= market.marketId %>'><button class="btn btn--primary">edit</button></form>
                                        </p>
                                    </td>
                                </tr>
                            </tr>
                            <hr>

                        </table>
                        <% }); %>

                </thead>
            </table>
            <footer class="app-footer"></footer>
        </div>
    </div>
    <div class="lightbox" v-show="formLightbox == true" style="display: none;">
            <h1 class="lightbox__header">Add Market</h1>
            <form class="lightbox__form" action="/marketAdd" method="POST">
                <div class="lightbox__form-control"><label class="lightbox__label">Market name</label><input class="lightbox__input"
                        placeholder="name" type="text" name="name" value="" /></div>
                <div class="lightbox__form-control"><label class="lightbox__label">Home Page link</label><input class="lightbox__input"
                        placeholder="www.market.com" type="text" name="linkMarket" value="" /></div>
                <div class="lightbox__form-control"><label class="lightbox__label">Link to logo</label><input class="lightbox__input"
                        placeholder="http://storage/logo.jpg" type="text" name="logo" /></div>
                <div class="lightbox__form-control"><label class="lightbox__label">TrustPilot link</label><input class="lightbox__input"
                        placeholder="http://trustPilot.com/companyname" type="text" name="raiting" /></div>
                <div class="lightbox__form-control"><label class="lightbox__label">Description</label><input class="lightbox__input"
                        placeholder="Write something about your company" type="text" name="description" /></div>
                <div class="lightbox__form-control"><label class="lightbox__label">Contact to support</label><input class="lightbox__input"
                        placeholder="example@example.com" type="text" name="support" /></div>
                <div class="lightbox__form-control"><label class="lightbox__label">adress</label><textarea class="lightbox__input"
                        placeholder="mala wieÅ› 666" rows="1" name="adress"></textarea></div>
                <div class="lightbox__actions"><button class="btn btn--primary">Accept</button></div>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/vue" type="text/javascript"></script>
    <script src="/js/app.js"></script>
</body>

</html>

