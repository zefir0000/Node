html
    head
        link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,700")
        link(rel="stylesheet" href="/css/main.css")
    body
        .home.dog-app(data-lightbox=showLightbox)
            header.app-header
                nav.app-nav
                    ul.app-nav__list
                        li.app-nav__list-item
                            a.app-nav__link(href="/") product base
                        li.app-nav__list-item
                            a.app-nav__link(href="/upload")  upload file xml
                        li.app-nav__list-item
                            a.app-nav__link(href="/getProducts?name=")  Search Game
                        li.app-nav__list-item
                            a.app-nav__link.app-nav__link--is-active(href="/getMarket?name=")  markets
                        li.app-nav__list-item
                            a.app-nav__link(href="/contact")  contact

            .lightbox(v-show="formLightbox == true" style="display: none;")
                .lightbox__content
                    button.btn(@click="formLightbox = false") X
                    h1.lightbox__header Add Market
                    form.lightbox__form(action="/market" method="POST")   
                        .lightbox__form-control
                            label.lightbox__label Market name
                            input.lightbox__input(placeholder="name" type="text" name="name" value=validated ? validated.name : '')
                            if (errors && errors.name)
                                p.lightbox__error #{ errors.name.msg }
                        .lightbox__form-control
                            label.lightbox__label Home Page link
                            input.lightbox__input(placeholder="www.market.com" type="text" name="linkMarket" value=validated ? validated.linkMarket : '')
                            if (errors && errors.linkMarket)
                                p.lightbox__error #{ errors.linkMarket.msg }
                        .lightbox__form-control
                            label.lightbox__label Link to logo
                            input.lightbox__input(placeholder="http://storage/logo.jpg" type="text" name="logo" value=validated ? validated.logo : '')
                            if (errors && errors.logo)
                                p.lightbox__error #{ errors.logo.msg }
                        .lightbox__form-control
                            label.lightbox__label TrustPilot link
                            input.lightbox__input(placeholder="http://trustPilot.com/companyname" type="text" name="raiting" value=validated ? validated.raiting : '')
                            if (errors && errors.raiting)
                                p.lightbox__error #{ errors.raiting.msg }
                        .lightbox__form-control
                            label.lightbox__label Description
                            input.lightbox__input(placeholder="Write something about your company" type="text" name="description" value=validated ? validated.description : '')
                            if (errors && errors.description)
                                p.lightbox__error #{ errors.description.msg }
                        .lightbox__form-control
                            label.lightbox__label Contact to support
                            input.lightbox__input(placeholder="example@example.com" type="text" name="support" value=validated ? validated.support : '')
                            if (errors && errors.support)
                                p.lightbox__error #{ errors.support.msg }
                        .lightbox__form-control
                            label.lightbox__label adress
                            textarea.lightbox__input(placeholder="mala wie≈õ 666" rows="1" name="adress" value=validated ? validated.adress: '')
                            if (errors && errors.adress)
                                p.lightbox__error #{ errors.adress.msg }
                        .lightbox__actions
                            button.btn.btn--primary Accept

            .wrapper
                section.search
                    h1.search__header
                    form.search__form(action='/getMarket' method="GET" role="search" type="search")
                    .actions
                        button.btn.btn--primary(@click="formLightbox = true") add market
                        input.search__input(placeholder="Find market" type="text" name="name")
                        .actions_inline
                            button.btn.btn--primary(@click="return q.value") search
                    
                table.table__style
                            thead
                                tr
                                    th.title_column Title
                                    th.price_column Price
                                    th.market_column Market
                                    th.action_column Action
                                    
                            for market in markets
                              table.table__style
                                tr 
                                    th.title_column= market.name 
                                    th.price_column= market.logo
                                    th.market_column= market.description 
                                    th.action_column
                                        .actions
                                            button.btn.btn--primary(@click="editLightbox = true") edit
                 
                footer.app-footer

            if (formMessage && formMessage.length)
                .lightbox(v-show="showFeedback")
                    .lightbox__content
                        h2.lightbox__header #{ formMessage }
                        .lightbox__actions.lightbox__actions--centered
                            button.btn.btn--primary(@click="closeFeedbackLightbox") Close

        script(src="https://cdn.jsdelivr.net/npm/vue" type="text/javascript")
        script(src="/js/app.js")
