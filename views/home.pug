html
    head
        link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,700")
        link(rel="stylesheet" href="/css/main.css")
    body
        .home.dog-app(data-lightbox=showLightbox)
            header.app-header
                .logo
                    img.logo__icon(src="/img/home-icon.png")
                    span.logo__text home page
                nav.app-nav
                    ul.app-nav__list
                        li.app-nav__list-item
                            a.app-nav__link.app-nav__link--is-active(href="#") home
                        li.app-nav__list-item
                            a.app-nav__link(href="#")  assign your movies
                        li.app-nav__list-item
                            a.app-nav__link(href="#")  exchange your credit
                        li.app-nav__list-item
                            a.app-nav__link(href="#")  how it works?
                        li.app-nav__list-item
                            a.app-nav__link(href="/contact")  contact
            .wrapper
                section.slogan
                    h1.slogan__header
                        | Promote your movie
                    p.slogan__text
                        | Do you know that your video without views is not visible to others? you can change it with us!
                    .actions
                        button.btn.btn--primary(@click="formLightbox = true") Assign your movie
                        button.btn.btn--shadow Donate us
                footer.app-footer
                    | Design by Slawomir :)
            .lightbox(v-show="formLightbox == true" style="display: none;")
                .lightbox__content
                    h2.lightbox__header Join us!
                    form.lightbox__form(action="/applications" method="POST")
                        .lightbox__form-control
                            label.lightbox__label What's your name?
                            input.lightbox__input(placeholder="John Doe" type="text" name="name" value=validated ? validated.name : '')
                            if (errors && errors.name)
                                p.lightbox__error #{ errors.name.msg }
                        .lightbox__form-control
                            label.lightbox__label What's your email?
                            input.lightbox__input(placeholder="example@example.com" type="text" name="phone" value=validated ? validated.phone : '')
                            if (errors && errors.phone)
                                p.lightbox__error #{ errors.phone.msg }
                        .lightbox__form-control
                            label.lightbox__label Leave link to your video
                            textarea.lightbox__input(placeholder="https://www.youtube.com/watch?v=Ir3_-Pv-6mU&t=13s" rows="1" name="message" value=validated ? validated.message: '')
                            if (errors && errors.message)
                                p.lightbox__error #{ errors.message.msg }
                        .lightbox__actions
                            button.btn.btn--primary Accept

            if (formMessage && formMessage.length)
                .lightbox(v-show="showFeedback")
                    .lightbox__content
                        h2.lightbox__header #{ formMessage }
                        .lightbox__actions.lightbox__actions--centered
                            button.btn.btn--primary(@click="closeFeedbackLightbox") Close

        script(src="https://cdn.jsdelivr.net/npm/vue" type="text/javascript")
        script(src="/js/app.js")